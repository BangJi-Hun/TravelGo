<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ranking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jihun.travelgo.RankingActivity">

    <TextView
        android:text="등수         닉네임         나이         성별         정복수"
        android:background="#0000FF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:id="@+id/tv_ranking1"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="25dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:id="@+id/tv_ranking3"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tv_ranking2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="25dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:id="@+id/tv_ranking2"
        android:background="@drawable/border"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tv_ranking1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="25dp" />

    <TextView
        android:text="TextView"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:id="@+id/tv_ranking5"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tv_ranking4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="25dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:id="@+id/tv_ranking4"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tv_ranking3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="25dp" />
</RelativeLayout>
